{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string"
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS"
            ]
        },
        "accessTier": {
          "type": "string",
          "defaultValue": "Hot",
          "allowedValues": [
            "Hot",
            "Cool"
          ],
          "metadata": {
            "description": "This setting is required if using BlobStorage as the storageKind, otherwise can be left blank"
          }
        },
        "storageKind": {
            "type": "string",
            "defaultValue": "BlobStorage",
            "allowedValues": [
                "Storage",
                "StorageV2",
                "BlobStorage"
            ]
        },
        "NetFirewall":{
            "type": "bool",
            "defaultValue": true
        },
        "resourceAccessRules": {
            "type": "array",
            "defaultValue": []
        },
        "bypass": {
            "type": "string",
            "defaultValue": "AzureServices"
        },
        "ipRules": {
            "type": "array",
            "defaultValue": []
        },
        "virtualNetworksSubNet": {
            "type": "array",
            "defaultValue": []
        }
    },
    "variables": {
    "networkAcls": {
        "resourceAccessRules": "[if(empty(parameters('resourceAccessRules')), createArray(), parameters('resourceAccessRules'))]",
        "bypass": "[if(empty(parameters('bypass')), '', parameters('bypass'))]",
        "virtualNetworkRules": "[if(empty(parameters('virtualNetworksSubNet')), createArray(), parameters('virtualNetworksSubNet'))]",
        "ipRules": "[if(empty(parameters('ipRules')), createArray(), parameters('ipRules'))]",
        "defaultAction": "Deny"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[replace(parameters('storageAccountName'), '-', '')]",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "kind": "[parameters('storageKind')]",
            "properties": {
                "minimumTlsVersion": "TLS1_2",
                "networkAcls": "[if(parameters('NetFirewall'), variables('networkAcls'), json('null'))]",
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file": {
                            "enabled": true
                        }
                    }
                },
                "accessTier": "[if(equals(parameters('storageKind'),'BlobStorage'),parameters('accessTier'),json('null'))]"
            }
        }
    ],
    "outputs": {
        "PrimaryEndpoints": {
            "type": "object",
            "value": "[reference(replace(parameters('storageAccountName'), '-', '')).primaryEndpoints]"
        },
		    "storageKey": {
            "type": "string",
            "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts',parameters('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value]"
        }
    }
}

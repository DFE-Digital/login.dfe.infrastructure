{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "amplsName": {
            "type": "string"
        },
        "queryAccessMode": {
          "type": "string",
          "allowedValues": [
            "PrivateOnly",
            "Open"
          ],
          "defaultValue": "PrivateOnly"
        },
        "ingestionAccessMode": {
          "type": "string",
          "allowedValues": [
            "PrivateOnly",
            "Open"
          ],
          "defaultValue": "PrivateOnly"
        },
        "appInsightsName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/privatelinkscopes",
            "name": "[parameters('amplsName')]",
            "apiVersion": "2021-07-01-preview",
            "location": "global",
            "properties": {
                "accessModeSettings": {
                    "queryAccessMode": "[parameters('queryAccessMode')]",
                    "ingestionAccessMode": "[parameters('ingestionAccessMode')]",
                    "exclusions": []
                }
            }
        },
        {
            "type": "microsoft.insights/privatelinkscopes/scopedresources",
            "apiVersion": "2021-07-01-preview",
            "name": "[concat(parameters('amplsName'),'-',parameters('appInsightsName'),'-LikedResource')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'ampls')]",
                "[resourceId('Microsoft.Resources/deployments', 'app-insights')]"
            ],
            "properties": {
                "linkedResourceId": "[parameters('appInsightsName')]"
            }
        }
    ],
    "outputs": {}
}

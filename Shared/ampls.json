{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "amplsName": {
            "type": "string"
        },
        "queryAccessMode": {
          "type": "string",
          "allowedValues": [
            "PrivateOnly",
            "Open"
          ],
          "defaultValue": "Open"
        },
        "ingestionAccessMode": {
          "type": "string",
          "allowedValues": [
            "PrivateOnly",
            "Open"
          ],
          "defaultValue": "PrivateOnly"
        },
        "appInsightsName": {
            "type": "string"
        },
        "amplsPrivateDnsZoneName": {
            "type": "string"
        },
        "amplsBlobPrivateDnsZoneName": {
            "type": "string"
        },
        "amplsMonitorPrivateDnsZoneName": {
            "type": "string"
        },
        "amplsOPInsightODSPrivateDnsZoneName": {
            "type": "string"
        },
        "amplsAgentsvcPrivateDnsZoneName": {
            "type": "string"
        },
        "amplsOPInsightOMSPrivateDnsZoneName": {
            "type": "string"
        },
        "amplsVirtualNetworkId": {
            "type": "string"
        },
        "amplsVirtualNetworkName": {
            "type": "string"
        },
        "amplsPrivateEndpointName": {
            "type": "string"
        },
        "amplsPrivateLinkResource": {
            "type": "string"
        },
        "amplsPrivateEndpointSubnetId": {
            "type": "string"
        },
        "applicationSecurityGroups": {
            "type": "string",
            "defaultValue":""
        },
       "amplsTargetSubResource": {
            "type": "array",
            "defaultValue": [
              "azuremonitor"
            ],
            "metadata": {
              "description": "The type of sub-resource for the resource selected above that your private endpoint will be able to access."
            }
        },
        "amplsprivateDnsDeploymentName": {
            "type": "string",
            "defaultValue":"amplsprivateDnsDeployment"
        },
        "amplsApiVersion": {
            "defaultValue": "2021-07-01-preview",
            "type": "string"
        }

    },
    "variables": {},
    "resources": [     
        {
            "apiVersion": "2021-04-01",
            "type": "Microsoft.Resources/deployments",
            "name": "azureMonitorPrivateLinkScopeDeployment",
            "properties": {
                "mode": "Incremental",
                "parameters": {},
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "microsoft.insights/privatelinkscopes",
                            "name": "[parameters('amplsName')]",
                            "apiVersion": "2021-07-01-preview",
                            "location": "global",
                            "properties": {
                                "accessModeSettings": {
                                    "queryAccessMode": "[parameters('queryAccessMode')]",
                                    "ingestionAccessMode": "[parameters('ingestionAccessMode')]",
                                    "exclusions": []
                                }
                            },
                            "resources":[
                                {
                                    "type": "microsoft.insights/privatelinkscopes/scopedresources",
                                    "apiVersion": "2021-07-01-preview",
                                    "name": "[concat(parameters('amplsName'),'/',parameters('appInsightsName'))]",
                                    "dependsOn": [
                                        "[resourceId('microsoft.insights/privatelinkscopes', parameters('amplsName'))]"
                                    ],
                                    "properties": {
                                        "linkedResourceId": "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
                                    }
                                
                                 }
                                ]
                        }
                        
                        
                    ]
                }
            }
        },
        {
            "apiVersion": "2021-04-01",
            "type": "Microsoft.Resources/deployments",
            "name": "amplsPrivateEndpointDeployment",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'azureMonitorPrivateLinkScopeDeployment')]"
              ],
            "properties": {
                "mode": "Incremental",
                "parameters": {},
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            
                            "location": "[resourceGroup().location]",
                            "type": "Microsoft.Network/privateEndpoints",
                            "name": "[parameters('amplsPrivateEndpointName')]",
                            "apiVersion": "2021-03-01",
                            "properties": {
                                "subnet": {
                                    "id": "[parameters('amplsPrivateEndpointSubnetId')]"
                                },
                                "privateLinkServiceConnections": [
                                    {
                                        "name": "[parameters('amplsPrivateEndpointName')]",

                                        "properties": {
                                            "privateLinkServiceId": "[parameters('amplsPrivateLinkResource')]",
                                            "groupIds": "[parameters('amplsTargetSubResource')]"
                                            
                
                                        }
                                    }
                                ]
                            }
                        }
                        
                    ]
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[parameters('amplsprivateDnsDeploymentName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/privateDnsZones",
                            "apiVersion": "2018-09-01",
                            "name": "[parameters('amplsMonitorPrivateDnsZoneName')]",
                            "location": "global",
                            "tags": {},
                            "properties": {}
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones",
                            "apiVersion": "2018-09-01",
                            "name": "[parameters('amplsOPInsightOMSPrivateDnsZoneName')]",
                            "location": "global",
                            "tags": {},
                            "properties": {}
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones",
                            "apiVersion": "2018-09-01",
                            "name": "[parameters('amplsOPInsightODSPrivateDnsZoneName')]",
                            "location": "global",
                            "tags": {},
                            "properties": {}
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones",
                            "apiVersion": "2018-09-01",
                            "name": "[parameters('amplsAgentsvcPrivateDnsZoneName')]",
                            "location": "global",
                            "tags": {},
                            "properties": {}
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones",
                            "apiVersion": "2018-09-01",
                            "name": "[parameters('amplsBlobPrivateDnsZoneName')]",
                            "location": "global",
                            "tags": {},
                            "properties": {}
                        }
                        
                    ]
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "amplsVirtualNetworkLinkDeployment",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[parameters('amplsprivateDnsDeploymentName')]",
                "amplsPrivateEndpointDeployment"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                            "apiVersion": "2018-09-01",
                            "name": "[concat(parameters('amplsAgentsvcPrivateDnsZoneName'), '/', uniqueString(parameters('amplsVirtualNetworkId')))]",
                            "location": "global",
                            "properties": {
                                "virtualNetwork": {
                                    "id": "[parameters('amplsVirtualNetworkId')]"
                                },
                                "registrationEnabled": false
                            }
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                            "apiVersion": "2018-09-01",
                            "name": "[concat(parameters('amplsBlobPrivateDnsZoneName'), '/', uniqueString(parameters('amplsVirtualNetworkId')))]",
                            "location": "global",
                            "properties": {
                                "virtualNetwork": {
                                    "id": "[parameters('amplsVirtualNetworkId')]"
                                },
                                "registrationEnabled": false
                            }
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                            "apiVersion": "2018-09-01",
                            "name": "[concat(parameters('amplsMonitorPrivateDnsZoneName'), '/', uniqueString(parameters('amplsVirtualNetworkId')))]",
                            "location": "global",
                            "properties": {
                                "virtualNetwork": {
                                    "id": "[parameters('amplsVirtualNetworkId')]"
                                },
                                "registrationEnabled": false
                            }
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                            "apiVersion": "2018-09-01",
                            "name": "[concat(parameters('amplsOPInsightODSPrivateDnsZoneName'), '/', uniqueString(parameters('amplsVirtualNetworkId')))]",
                            "location": "global",
                            "properties": {
                                "virtualNetwork": {
                                    "id": "[parameters('amplsVirtualNetworkId')]"
                                },
                                "registrationEnabled": false
                            }
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                            "apiVersion": "2018-09-01",
                            "name": "[concat(parameters('amplsOPInsightOMSPrivateDnsZoneName'), '/', uniqueString(parameters('amplsVirtualNetworkId')))]",
                            "location": "global",
                            "properties": {
                                "virtualNetwork": {
                                    "id": "[parameters('amplsVirtualNetworkId')]"
                                },
                                "registrationEnabled": false
                            }
                        }
                        
                    ]
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "amplsPrivateDnsZoneGroupsDeployment",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'azureMonitorPrivateLinkScopeDeployment')]",    
                "amplsPrivateEndpointDeployment",
                "[parameters('amplsprivateDnsDeploymentName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
                            "apiVersion": "2021-03-01",
                            "name": "[concat(parameters('amplsPrivateEndpointName'), '/', 'default')]",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "privateDnsZoneConfigs": [
                                    {
                                        "name": "[parameters('amplsMonitorPrivateDnsZoneName')]",
                                        "properties": {
                                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', parameters('amplsMonitorPrivateDnsZoneName'))]"
                                        }
                                    },
                                    {
                                        "name": "[parameters('amplsOPInsightOMSPrivateDnsZoneName')]",
                                        "properties": {
                                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', parameters('amplsOPInsightOMSPrivateDnsZoneName'))]"
                                        }
                                    },
                                    {
                                        "name": "[parameters('amplsOPInsightODSPrivateDnsZoneName')]",
                                        "properties": {
                                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', parameters('amplsOPInsightODSPrivateDnsZoneName'))]"
                                        }
                                    },
                                    {
                                        "name": "[parameters('amplsAgentsvcPrivateDnsZoneName')]",
                                        "properties": {
                                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', parameters('amplsAgentsvcPrivateDnsZoneName'))]"
                                        }
                                    },
                                    {
                                        "name": "[parameters('amplsBlobPrivateDnsZoneName')]",
                                        "properties": {
                                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', parameters('amplsBlobPrivateDnsZoneName'))]"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}

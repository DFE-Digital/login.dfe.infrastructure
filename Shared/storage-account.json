{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string"
        },
        "NetFirewall":{
            "type": "bool",
            "defaultValue": true
        },
        "resourceAccessRules": {
            "type": "array",
            "defaultValue": []
        },
        "bypass": {
            "type": "string",
            "defaultValue": ""
        },
        "ipRules": {
            "type": "array",
            "defaultValue": []
        },
        "virtualNetworksSubNet": {
            "type": "array"
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS"
            ]
        },
        "storageKind": {
            "type": "string",
            "defaultValue": "BlobStorage",
            "allowedValues": [
                "Storage",
                "StorageV2",
                "BlobStorage"
            ]
        }
    },
    "variables": {
      "storageAccountName": "[replace(parameters('storageAccountName'), '-', '')]",
      "networkAcls": {
        "resourceAccessRules": "[if(empty(parameters('resourceAccessRules')), createArray(), parameters('resourceAccessRules'))]",
        "bypass": "[parameters('bypass')]",
        "virtualNetworkRules": "[parameters('virtualNetworksSubNet')]",
        "ipRules": "[if(empty(parameters('ipRules')), createArray(), parameters('ipRules'))]",
        "defaultAction": "Deny"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "kind": "[parameters('storageKind')]",
            "properties": {
                "minimumTlsVersion": "TLS1_2",
                "networkAcls":"[if(bool(parameters('NetFirewall')), json(null), variables('networkAcls'))]",
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file": {
                            "enabled": true
                        }
                    }
                },
                "accessTier": "Hot"
            }
        }
    ],
    "outputs": {
        "PrimaryEndpoints": {
            "type": "object",
            "value": "[reference(variables('storageAccountName')).primaryEndpoints]"
        },
        "storageAccountConnectionString": {
            "type": "string",
            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value)]"
        }
    }
}

{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templatesBaseUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/DFE-Digital/login.dfe.infrastructure/feature/DSI-4604/"
    },
    "privateEndpointName": {
      "type": "string"
    },
    "privateLinkResource": {
      "type": "string",
      "metadata": {
        "description": "The resource id of the resource you're connecting to"
      }
    },
    "targetSubResource": {
      "type": "array",
      "defaultValue": [
        "azureSearch"
      ],
      "metadata": {
        "description": "The type of sub-resource for the resource selected above that your private endpoint will be able to access."
      }
    },
    "privateEndpointSubnetId": {
      "type": "string",
      "metadata": {
        "description": "The subnet resource id to attach the private endpoint to"
      }
    },
    "privateDnsZoneName": {
      "type": "string"
    },
    "virtualNetworkId": {
      "type": "string"
    },
    "azureSearchName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2020-10-01",
      "name": "azure-search-private-endpoint-1",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templatesBaseUri'),'Shared/private-endpoint.json')]"
        },
        "parameters": {
          "privateEndpointName": {
            "value": "[parameters('privateEndpointName')]"
          },
          "privateLinkResource": {
            "value": "[parameters('privateLinkResource')]"
          },
          "targetSubResource": {
            "value": "[parameters('targetSubResource')]"
          },
          "privateEndpointSubnetId": {
            "value": "[parameters('privateEndpointSubnetId')]"
          }
        }
      }
    },
    {
      "apiVersion": "2020-10-01",
      "name": "azure-search-private-dns-zones",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templatesBaseUri'),'Shared/private-dns-zones.json')]"
        },
        "parameters": {
          "privateDnsZoneName": {
            "value": "[parameters('privateDnsZoneName')]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'azure-search-private-endpoint-1')]"
      ]
    },
    {
      "apiVersion": "2020-10-01",
      "name": "azure-search-private-dns-zones-vnet-links",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templatesBaseUri'),'Shared/private-dns-zones-vnet-links.json')]"
        },
        "parameters": {
          "privateDnsZoneName": {
            "value": "[parameters('privateDnsZoneName')]"
          },
          "virtualNetworkId": {
            "value": "[parameters('virtualNetworkId')]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'azure-search-private-dns-zones')]"
      ]
    },
    {
      "apiVersion": "2020-10-01",
      "name": "azure-search-private-dns-zone-groups",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templatesBaseUri'),'Shared/private-dns-zone-groups.json')]"
        },
        "parameters": {
          "privateEndpointName": {
            "value": "[parameters('privateEndpointName')]"
          },
          "privateDnsZoneName": {
            "value": "[parameters('privateDnsZoneName')]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'azure-search-private-endpoint-1')]",
        "[resourceId('Microsoft.Resources/deployments', 'azure-search-private-dns-zones')]"
      ]
    }
  ]
}

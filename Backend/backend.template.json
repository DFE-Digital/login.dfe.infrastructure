{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templatesBaseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/DFE-Digital/login.dfe.infrastructure/master/",
            "metadata": {
                "description": "The base url that will be used when building template urls"
            }
        },
        "redisCacheName": {
            "type": "string",
            "metadata": {
                "description": "The name of the redis cache"
            }
        },
        "redisCacheSku": {
            "type": "object",
            "defaultValue": {
                "name": "Standard",
                "family": "C",
                "capacity": 1
            },
            "metadata": {
                "description": "The sku of the redis cache"
            }
        }
    },
    "variables": {
        "redisTemplateUrl": "[concat(parameters('templatesBaseUri'), 'Shared/redis-cache.json')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "AppServicePlan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('redisTemplateUrl')]"
                },
                "parameters": {
                    "redisCacheName": {
                        "value": "[parameters('redisCacheName')]"
                    },
                    "redisCacheSku": {
                        "value": "[parameters('redisCacheSku')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}